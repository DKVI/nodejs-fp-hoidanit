<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <title>Node.JS basic</title>
    <style>
      body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
      }

      .topnav {
        overflow: hidden;
        background-color: #333;
      }

      .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }

      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }

      .topnav a.active {
        background-color: #04aa6d;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <div style="padding-left: 16px">
      <h2>Top Navigation Example</h2>
      <p>Some content..</p>
      <div class="w3-container">
        <h2>List Users Table</h2>

        <table class="w3-table-all w3-hoverable">
          <thead>
            <tr class="w3-light-grey">
              <th>id</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Address</th>
              <th>Actions</th>
            </tr>
          </thead>
          <% for (let i = 0; i < users.length; i++) { %>
          <tr>
            <td><%= users[i].id %></td>
            <td><%= users[i].firstName %></td>
            <td><%= users[i].lastName %></td>
            <td><%= users[i].address %></td>
            <td>
              <a
                href="/detail/user/<%= users[i].id %>"
                style="
                  padding: 2px 10px;
                  text-decoration: none;
                  border: 1px solid black;
                "
                >Details</a
              >
              <a
                href="/detail/user/<%= users[i].id %>"
                style="
                  padding: 2px 10px;
                  text-decoration: none;
                  border: 1px solid black;
                "
                >Edit</a
              >
              <a
                href="/detail/user/<%= users[i].id %>"
                style="
                  padding: 2px 10px;
                  text-decoration: none;
                  border: 1px solid black;
                "
                >Delete</a
              >
            </td>
          </tr>
          <% } %>
        </table>
        <div>
          <div class="createForm" style="width: 100%; display: flex">
            <form
              class="form"
              action="/create-new-user"
              style="width: 500px; margin: auto"
              method="POST"
            >
              <h1>Create User</h1>
              <div class="firstName">
                <label>
                  <b>First Name</b>
                </label>
                <input
                  type="text"
                  placeholder="Enter First Name"
                  name="firstName"
                />
              </div>
              <div class="lastName">
                <label>
                  <b>Last Name</b>
                </label>
                <input
                  type="text"
                  placeholder="Enter Last Name"
                  name="lastName"
                />
              </div>
              <div class="address">
                <label>
                  <b>Address</b>
                </label>
                <input type="text" placeholder="Enter Address" name="address" />
              </div>
              <div style="width: 100%; display: flex">
                <div class="submit">
                  <button type="submit">Create</button>
                </div>
                <div class="clear">
                  <button>Clear</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script>
    const navLinks = document.querySelectorAll(".topnav a");
    console.log(navLinks);
    navLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        console.log(e.target);
        navLinks.forEach((link) => {
          link.classList.remove("active");
        });
        e.target.classList.add("active");
      });
      document.querySelector(".clear").onclick = () => {
        document.querySelector(".firstName input").value = "";
        document.querySelector(".lastName input").value = "";
        document.querySelector(".address input").value = "";
      };
    });
  </script>
</html>
