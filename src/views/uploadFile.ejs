<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <title>Node.JS basic</title>
    <style>
      html {
        width: 100%;
        height: 100%;
      }
      body {
        width: 100%;
        height: 100%;
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
      }

      .topnav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        overflow: hidden;
        background-color: #333;
      }

      .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }

      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }

      .topnav a.active {
        background-color: #04aa6d;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="topnav">
      <a class="" href="/">Home</a>

      <a href="/upload" class="active"> Upload file </a>
    </div>
    <div style="padding-left: 16px; height: 100%">
      <div style="width: 100%; height: 100%; display: flex">
        <form
          action="/upload-single-pic"
          style="margin: auto"
          method="post"
          enctype="multipart/form-data"
        >
          <label for="">upload file</label>
          <input type="file" name="input-single-file" />
          <img style="height: 200px" class="file-review" />
          <button type="submit" name="btn-input-single-file">Submit</button>
        </form>
        <form
          action="/upload-multiple-pic"
          style="margin: auto"
          method="post"
          enctype="multipart/form-data"
        >
          <label for="">upload file</label>
          <input type="file" name="input-multiple-file" multiple />
          <button type="submit" name="btn-multiple-single-file">Submit</button>
        </form>
      </div>
    </div>
  </body>
  <script>
    const navLinks = document.querySelectorAll(".topnav a");
    console.log(navLinks);
    navLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        console.log(e.target);
        navLinks.forEach((link) => {
          link.classList.remove("active");
        });
        e.target.classList.add("active");
      });
    });
  </script>
</html>
